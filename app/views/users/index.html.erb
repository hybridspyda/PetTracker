<h1>Users</h1>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Avatar</th>
			<th>Full Name</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Username</th>
			<th>Email</th>
			<th>Options</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= gravatar_for user %></td>
				<td><%= user.full_name %></td>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td id="options">
					<%= link_to 'Show', user %>
					<%#= link_to 'Destroy', user, method: :delete, data: { confirm: "Do you really want to delete the user: #{user.username}?\rThis action cannot be undone!" } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

