<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Breed</th>
      <th>Variety</th>
      <th>Sex</th>
      <th>Date of birth</th>
      <th>Is approx dob</th>
      <th>Date of death</th>
      <th>Gotcha day</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.species %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.variety %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.date_of_birth %></td>
        <td><%= pet.is_approx_dob %></td>
        <td><%= pet.date_of_death %></td>
        <td><%= pet.gotcha_day %></td>
        <td><%= pet.user %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

