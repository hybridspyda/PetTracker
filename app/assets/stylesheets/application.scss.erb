 * ------------------------------------------------------------ */


/* ------------------------------------------------------------
 * GENERAL LAYOUTS
 * ------------------------------------------------------------ */
body {
	background-color: #23371E;
	margin: 0;
	padding: 0;
	font-size: 13px;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	line-height: 18px;
}

a {
	color: black;
	/*&:visited {
		color: #666;
	}*/
	&:hover {
		color: white;
		background-color: #333;
	}
}

h2 {
	-webkit-margin-before: 0px;
	-webkit-margin-after: 0px;
	margin: 10px 10px;
}
h3 {
	margin: 0;
	border-bottom: 2px solid white;
	background-color: #6E9334;
	padding: 0 10px;
	font-weight: bold;
	color: white;
}

.turbolinks-progress-bar {
	height: 5px;
	background-color: green;
}

#up-link {
	text-decoration: none;
}

/* ------------------------------------------------------------
 * HEADER - INCLUDING 'MINI' NAVIGATION BARS
 * ------------------------------------------------------------ */
header {
	div#titleBlock {
		display: block;
		margin: 0 10px 0 10px;
		border: 1px solid #999;
		border-bottom: 0;
		background-color: white;
		padding: 2px;
		width: auto;
		a {
			text-decoration: none;
			&:hover {
				color: transparent;
				background-color: transparent;
			}
		}
		div#globalnav {
			margin: 0 0 2px 0;
			border: 0;
			background: #333 url(asset_path("bg_globalnav.jpg")) center center repeat-x;
			padding: 0 10px;
			text-align: right;
			display: inline-block;
			width: calc(100% - 20px);
			p {
				display: inline;
				margin: 0;
				padding: 0;
				font: bold 11px/31px Arial, Helvetica, sans-serif;
				padding-right: 10px;
				color: #666;
				text-transform: uppercase;
				span { color: #BBB; }
				a {
					display: inline-block;
					color: white;
					text-decoration: none;
				}
			}
		}
		h1 {
			padding: 0;
			font-weight: bold;
			color: #6E9334;
			display: inline-block;
			float: right;
			padding-right: 20px;
		}
		div#mainnav {
			display: inline-block;
			nav {
				width: 100%;
				background: #DAE1D0;
				border: 1px solid #ccc;
				border-right: none;
				ul {
					overflow: hidden;
					margin: 0;
					padding: 5px;
					li {
						list-style: none;
						float: left;
						text-align: center;
						border-left: 1px solid #fff;
						border-right: 1px solid #ccc;
						box-sizing: border-box;
						background-color: #6E9334;
						&:first-child {
							border-left: none;
						}
						&:last-child {
							border-right: none;
						}
						&.active { background-color: #111; }
						a {
							display: block;
							text-decoration: none;
							color: white;
							padding: 10px 5px;
							&:visited { color: white; }
							&:hover {
								background-color: #333;
								color: white;
							}
						}
					}
				}
			}
		}
		
	}	
}

/* ------------------------------------------------------------
 * SECTION CONTENT - SIDE NAV BAR, YIELD
 * ------------------------------------------------------------ */
section.wrapper {
	display: block;
	border: 1px solid #999;
	border-bottom: 0;
	background: white;
	padding: 2px;
	margin: 0 10px;
	width: auto;
	min-height: 500px;
	div.colRightLarge {
		margin: 0;
		padding: 0;
		background-color: white;
		div.content {
			display: block;
			margin: 0;
			color: #333;
			padding: 10px 12px;
			margin-bottom: 6px;
		}
	}
}

/* ------------------------------------------------------------
 * FLASH MESSAGES - #NOTICE, #ERROR
 * ------------------------------------------------------------ */
div.flash {
	display: inline-block;
	width: 80%;
	position: fixed;
	bottom: 0px;
	left: 10%;
	background-repeat: repeat-x;
	text-shadow: 0 1px 0 rgba(255,255,255,.2);
	text-align: center;
	box-shadow: inset 0 1px 0 rgba(255,255,255,.25),0 1px 2px rgba(0,0,0,.05);
	padding: 15px;
	margin-bottom: 20px;
	border: 1px solid transparent;
	border-radius: 4px;
	box-sizing: border-box;
	&#error {
		background-image: linear-gradient(to bottom,#f2dede 0,#e7c3c3 100%);
		border-color: #dca7a7;
		color: #a94442;
		background-color: #f2dede;
		a {
			float: right;
			font-size: 21px;
			font-weight: 700;
			line-height: 1;
			color: #000;
			text-shadow: 0 1px 0 #fff;
			opacity: .2;
			text-decoration: none;
			&:hover { background-color: transparent; }
		}
	}
	&#notice {
		background-image: linear-gradient(to bottom,#dff0d8 0,#c8e5bc 100%);
		border-color: #b2dba1;
		color: #3c763d;
		background-color: #dff0d8;
		a {
			float: right;
			font-size: 21px;
			font-weight: 700;
			line-height: 1;
			color: #000;
			text-shadow: 0 1px 0 #fff;
			opacity: .2;
			text-decoration: none;
			&:hover { background-color: transparent; }
		}
	}
}

/* ------------------------------------------------------------
 * DIALOG MESSAGES - 404, 422, 500
 * ------------------------------------------------------------ */

div.dialog {
	width: 95%;
	max-width: 33em;
	margin: 4em auto 0;
	div {
		border: 1px solid #CCC;
		border-right-color: #999;
		border-left-color: #999;
		border-bottom-color: #BBB;
		border-top: #6E9334 solid 4px;
		border-top-left-radius: 9px;
		border-top-right-radius: 9px;
		background-color: white;
		padding: 7px 12% 0;
		box-shadow: 0 3px 8px rgba(50, 50, 50, 0.17);
		h4 {
			font-size: 100%;
			color: #730E15;
			line-height: 1.5em;
		}
	}
	p {
		margin: 0 0 1em;
		padding: 1em;
		background-color: #F7F7F7;
		border: 1px solid #CCC;
		border-right-color: #999;
		border-left-color: #999;
		border-bottom-color: #999;
		border-bottom-left-radius: 4px;
		border-bottom-right-radius: 4px;
		border-top-color: #DADADA;
		color: #666;
		box-shadow: 0 3px 8px rgba(50, 50, 50, 0.17);
	}
}
a#safety {
	display: block;
	margin: auto;
	text-align: center;
	text-decoration: none;
	width: 15%;
	border: 1px solid #CCC;
	border-radius: 6px;
	border-right-color: #999;
	border-left-color: #999;
	border-top-color: #999;
	border-bottom: #6E9334 solid 4px;
	padding: 10px;
	box-shadow: 0 3px 8px rgba(50, 50, 50, 0.17);
}

/* ------------------------------------------------------------
 * ERROR EXPLANATION
 * ------------------------------------------------------------ */
#error_explanation {
	width: 450px;
	border: 2px solid red;
	padding: 7px;
	padding-bottom: 0;
	margin: 0 auto 20px;
	background-color: #F0F0F0;
	h2 {
		text-align: left;
		font-weight: bold;
		padding: 5px 5px 5px 15px;
		font-size: 12px;
		margin: -7px;
		margin-bottom: 0px;
		background-color: #C00;
		color: white;
	}
	ul li {
		font-size: 12px;
		list-style: square;
	}
	em {
		width: 100%;
		margin: 0 auto;
		text-align: center;
		display: inline-block;
		padding: 5px;
	}
}

/* ------------------------------------------------------------
 * FILTER CONTROLS
 * ------------------------------------------------------------ */
.filter-controls-well {
	display: block;
	height: 40px;
	padding: 19px;
	margin-bottom: 20px;
	background-color: #F5F5F5;
	border: 1px solid #E3E3E3;
	border-radius: 4px;
	box-shadow: inset 0 1px 1px rgba(0,0,0,0.5);
	.row {
		margin-left: -20px;
		input#filter_with_matrix_id { width: 80px; }
		input#filter_with_steam_id { width: 80px; }
		&:before,&:after {
			display: table;
			content: "";
			line-height: 0;
		}
		&:after { clear: both; }
		[class*="span"] {
			float: left;
			min-height: 1px;
			margin-left: 20px;
		}
		&.span3 { width: 220px; }
		&.span2 { width: 140px; }
		&.span1 { width: 60px;	}
		.reset { transform: translateY(50%); }
	}
	&.well-small { height: 19px; }
	&#filtered {
		border-color: orange;
		border-width: medium;
	}
}

/* ------------------------------------------------------------
 * ACCORDIONS
 * ------------------------------------------------------------ */
.accordion{
	&:after {
		content: '\02795'; /* Unicode character for "plus" sign (+) */
		font-size: 13px;
		color: #777;
		float: right;
		margin-left: 5px;
	}
	&.active:after { content: "\2796"; /* Unicode character for "munus" sign (-) */ }
}

/* ------------------------------------------------------------
 * TABLES - #GAMELIST, #PLATFORMLIST, #BUILDLIST, #FILESETLIST
 * ------------------------------------------------------------ */
table {
	border-collapse: collapse;
	width: 90%;
	margin: 0 5%;
	tbody tr:hover { background-color: rgba(0,140,203,.2); }
	thead { background-color: #DAE1D0; }
	td#options {
		display: table-cell;
		vertical-align: middle;
		margin: 0;
		padding: 4px;
		text-align: center;
		min-width: 180px;
		form.button_to {
			display: inline-block;
			margin: 1px 3px;
		}
	}
	td#notes { max-width: 300px; }
}

/* ------------------------------------------------------------
 * FOOTER
 * ------------------------------------------------------------ */
footer {
	display: block;
	border: 1px solid #999;
	border-top-color: #DDD;
	background-color: white;
	padding: 2px;
	margin: 0 10px;
	width: auto;
	div#footernav {
		margin: 0;
		border: 0;
		background-color: #F6F6F6;
		padding: 15px 10px;
		p {
			margin: 0 0 10px 0;
			padding: 0;
			font: normal 11px/15px Arial, Helvetica, sans-serif;
			color: #BBB;
			text-align: center;
			&.copyright { color: #666; }
			a {
				cursor: auto;
				text-transform: lowercase;
				font-weight: bold;
				color: #C60;
				text-decoration: none;
			}
		}
	}
}

/* ------------------------------------------------------------
 * DEBUGGING INFO
 * ------------------------------------------------------------ */

 @mixin box_sizing {
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
 }

.debug_dump {
	display: block;
	border: 1px solid #999;
	border-top-color: #DDD;
	background-color: white;
	padding: 2px;
	margin: 0 10px 10px;
	width: auto;
	clear: both;
	margin-top: 45px;
	@include box-sizing;
}